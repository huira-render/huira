@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Include our CSPICE finder and call it
include("${CMAKE_CURRENT_LIST_DIR}/huiraFindCSPICE.cmake")
huira_find_cspice()

# Find GLM
find_dependency(glm CONFIG QUIET)
if(NOT glm_FOUND)
    find_path(GLM_INCLUDE_DIR glm/glm.hpp REQUIRED)
    add_library(glm::glm INTERFACE IMPORTED)
    target_include_directories(glm::glm INTERFACE ${GLM_INCLUDE_DIR})
endif()

# Find termcolor
find_dependency(termcolor CONFIG QUIET)
if(NOT termcolor_FOUND)
    find_path(TERMCOLOR_INCLUDE_DIR termcolor/termcolor.hpp REQUIRED)
    add_library(termcolor::termcolor INTERFACE IMPORTED)
    target_include_directories(termcolor::termcolor INTERFACE ${TERMCOLOR_INCLUDE_DIR})
endif()

include("${CMAKE_CURRENT_LIST_DIR}/huiraTargets.cmake")
check_required_components(huira)
